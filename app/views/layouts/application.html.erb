<!DOCTYPE html>
<html>
  <head>
    <title>Simply Collection Banner</title>
    <link rel="icon" type="image/ico" href="collection.png" />
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  	<nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <a class="navbar-brand" href="#">Simply Collection Banner</a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
          	<li class="collection_configrations active"><%= link_to  "Collection Banner", collection_configrations_path(:shop => params[:shop]) %></li>
            <!-- <li class="app_configrations"><%#= link_to  "Configrations", app_configrations_path(:shop => params[:shop]) %></li> -->
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </nav>
    <div style="margin-top: 6%;">
      <%= yield %>
    </div>
  </body>
</html>

<script type="text/javascript">
	$(function()
	{
		var path = window.location.pathname
		if (path == "/collection_configrations") {
			$('.collection_configrations').addClass('active')
		}
	});
</script>

<script type="text/javascript">
  $(function()
  {
    var path = window.location.pathname
    if (path == "/collection_configrations") {
      $('.collection_configrations').addClass('active')
      $('.app_configrations').removeClass('active')
      $('.sms_buckets').removeClass('active')
    }
    else if (path == "/app_configrations") {
      $('.collection_configrations').removeClass('active')
      $('.app_configrations').addClass('active')
    }
    else
    {
      $('.collection_configrations').addClass('active')
      $('.app_configrations').removeClass('active')
    }
  });
</script>

